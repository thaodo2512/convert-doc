{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sensor Auxiliary Names PDR Schema (DSP0248 1.3.0, Clause 28.8)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "PLDMTerminusHandle",
    "sensorID"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 6,
          "binaryFormat": "B",
          "description": "uint8; Sensor Auxiliary Names PDR = 6"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Handle identifying PDRs for a specific PLDM terminus"
    },
    "sensorID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Unique ID of the sensor within the terminus"
    },
    "auxNames": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "nameStringCount"
        ],
        "properties": {
          "nameStringCount": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "binaryFormat": "B",
            "description": "uint8; Number of name pairs for this sensor offset"
          },
          "names": {
            "type": "array",
            "minItems": 0,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "binaryOrder": [
                "nameLanguageTag",
                "sensorName"
              ],
              "properties": {
                "nameLanguageTag": {
                  "type": "string",
                  "binaryFormat": "variable",
                  "description": "strASCII; Null-terminated language tag (RFC4646), e.g., 'en'. Empty = unspecified"
                },
                "sensorName": {
                  "type": "string",
                  "binaryFormat": "variable",
                  "description": "strUTF-16BE; Null-terminated sensor name. Empty = not provided"
                }
              },
              "required": [
                "nameLanguageTag",
                "sensorName"
              ]
            },
            "description": "Array of name pairs, length = nameStringCount"
          }
        },
        "required": [
          "nameStringCount",
          "names"
        ]
      },
      "description": "Array for each sensor offset (1 for numeric/single, up to 8 for composite). Implied count from associated sensor PDR."
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "auxNames"
  ]
}
