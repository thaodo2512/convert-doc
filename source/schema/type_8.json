{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM State Set PDR (DSP0248 Type 8)",
  "description": "Per DSP0248 v1.3.0 Clause 28.10 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "oemStateSetID",
    "stateSetVersion",
    "nameStringCount",
    "stateSetNames",
    "possibleStateCount",
    "possibleStates"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 8,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 8 = OEM State Set"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "oemStateSetID": {
      "type": "integer",
      "minimum": 32768,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; OEM State Set ID"
    },
    "stateSetVersion": {
      "type": "object",
      "additionalProperties": false,
      "binaryOrder": [
        "major",
        "minor",
        "update",
        "alpha"
      ],
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Major version number"
        },
        "minor": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Minor version number"
        },
        "update": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Update/revision number"
        },
        "alpha": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Alpha modifier: 0=released, 1-26=a-z pre-release"
        }
      },
      "required": ["major", "minor", "update", "alpha"]
    },
    "nameStringCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 16,
      "binaryFormat": "B",
      "description": "uint8; Number of name pairs for the state set. If 0, 'stateSetNames' array must be empty."
    },
    "stateSetNames": {
      "type": "array",
      "description": "Array of name pairs for the state set. Length must match 'nameStringCount'.",
      "minItems": 0,
      "maxItems": 16,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "nameLanguageTag",
          "stateSetName"
        ],
        "properties": {
          "nameLanguageTag": {
            "type": "string",
            "description": "strASCII per DSP0240. RFC 5646 tag (e.g., 'en'). Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
            "binaryFormat": "variable",
            "x-binary-encoding": "us-ascii",
            "x-binary-terminator": "0x00",
            "maxLength": 32
          },
          "stateSetName": {
            "type": "string",
            "description": "strUTF-16BE per DSP0240. Null-terminated (0x0000). No BOM required; empty string is just the terminator. Includes terminator in binary length.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-16be",
            "x-binary-terminator": "0x0000",
            "maxLength": 128
          }
        },
        "required": ["nameLanguageTag", "stateSetName"]
      }
    },
    "possibleStateCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 32,
      "binaryFormat": "B",
      "description": "uint8; Number of possible states in the state set."
    },
    "possibleStates": {
      "type": "array",
      "description": "Array of possible states. Length must match 'possibleStateCount'.",
      "minItems": 1,
      "maxItems": 32,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "possibleStateValue",
          "nameStringCount",
          "possibleStateNames"
        ],
        "properties": {
          "possibleStateValue": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "binaryFormat": "B",
            "description": "uint8; Value for this possible state"
          },
          "nameStringCount": {
            "type": "integer",
            "minimum": 0,
            "maximum": 16,
            "binaryFormat": "B",
            "description": "uint8; Number of name pairs for this possible state. If 0, 'possibleStateNames' array must be empty."
          },
          "possibleStateNames": {
            "type": "array",
            "description": "Array of name pairs for this possible state. Length must match 'nameStringCount'.",
            "minItems": 0,
            "maxItems": 16,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "binaryOrder": [
                "nameLanguageTag",
                "possibleStateName"
              ],
              "properties": {
                "nameLanguageTag": {
                  "type": "string",
                  "description": "strASCII per DSP0240. RFC 5646 tag (e.g., 'en'). Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
                  "binaryFormat": "variable",
                  "x-binary-encoding": "us-ascii",
                  "x-binary-terminator": "0x00",
                  "maxLength": 32
                },
                "possibleStateName": {
                  "type": "string",
                  "description": "strUTF-16BE per DSP0240. Null-terminated (0x0000). No BOM required; empty string is just the terminator. Includes terminator in binary length.",
                  "binaryFormat": "variable",
                  "x-binary-encoding": "utf-16be",
                  "x-binary-terminator": "0x0000",
                  "maxLength": 128
                }
              },
              "required": ["nameLanguageTag", "possibleStateName"]
            }
          }
        },
        "required": ["possibleStateValue", "nameStringCount", "possibleStateNames"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "oemStateSetID",
    "stateSetVersion",
    "nameStringCount",
    "stateSetNames",
    "possibleStateCount",
    "possibleStates"
  ]
}
