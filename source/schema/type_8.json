{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM State Set PDR (DSP0248 Type 8)",
  "description": "Per DSP0248 v1.3.0 Clause 28.10, Table 86 and Table 87",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "OEMStateSetIDHandle",
    "vendorIANA",
    "OEMStateSetID",
    "unspecifiedValueHint",
    "stateCount",
    "stateValueRecords"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 8,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 8 = OEM State Set"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The terminus that originated this PDR"
    },
    "OEMStateSetIDHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Identifies an OEM State Set within this PDR Repository. Value from OEM State Set numbers range per DSP0249."
    },
    "vendorIANA": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; IANA Enterprise Number for the vendor defining the OEM State Set"
    },
    "OEMStateSetID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Vendor-assigned numeric ID for the vendor-defined state set. Must be in OEM State Set range per DSP0249."
    },
    "unspecifiedValueHint": {
      "type": "integer",
      "enum": [0, 1],
      "binaryFormat": "B",
      "description": "enum8; Hint for OEM state values not covered by stateValueRecords: 0=treatAsUnspecified, 1=treatAsError"
    },
    "stateCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Number of OEM State Value Records following. Records stored from lowest to highest stateValue."
    },
    "stateValueRecords": {
      "type": "array",
      "description": "Array of OEM State Value Records per Table 87. Length must match 'stateCount'.",
      "minItems": 0,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "minStateValue",
          "maxStateValue",
          "stringCount",
          "stateNames"
        ],
        "properties": {
          "minStateValue": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "binaryFormat": "B",
            "description": "uint8; Lowest state enumeration value for this record"
          },
          "maxStateValue": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "binaryFormat": "B",
            "description": "uint8; Highest state enumeration value. If equal to minStateValue, strings apply to a single state. Ranges shall not overlap."
          },
          "stringCount": {
            "type": "integer",
            "minimum": 0,
            "maximum": 16,
            "binaryFormat": "B",
            "description": "uint8; Number of stateLanguageTag/stateName field pairs (1..N). 0 = no name information."
          },
          "stateNames": {
            "type": "array",
            "description": "Array of state name pairs. Length must match 'stringCount'.",
            "minItems": 0,
            "maxItems": 16,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "binaryOrder": [
                "stateLanguageTag",
                "stateName"
              ],
              "properties": {
                "stateLanguageTag": {
                  "type": "string",
                  "description": "strASCII per DSP0240. RFC 5646 tag (e.g., 'en'). Null-terminated (0x00).",
                  "binaryFormat": "variable",
                  "x-binary-encoding": "us-ascii",
                  "x-binary-terminator": "0x00",
                  "maxLength": 32
                },
                "stateName": {
                  "type": "string",
                  "description": "strUTF-16BE per DSP0240. Null-terminated (0x0000). Name of this state value.",
                  "binaryFormat": "variable",
                  "x-binary-encoding": "utf-16be",
                  "x-binary-terminator": "0x0000",
                  "maxLength": 128
                }
              },
              "required": ["stateLanguageTag", "stateName"]
            }
          }
        },
        "required": ["minStateValue", "maxStateValue", "stringCount", "stateNames"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "OEMStateSetIDHandle",
    "vendorIANA",
    "OEMStateSetID",
    "unspecifiedValueHint",
    "stateCount",
    "stateValueRecords"
  ]
}
