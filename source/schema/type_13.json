{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Effecter Auxiliary Names PDR Schema (DSP0248 1.3.0, Clause 28.15)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "PLDMTerminusHandle",
    "effecterID",
    "auxNames"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 13,
          "binaryFormat": "B",
          "description": "uint8; Effecter Auxiliary Names PDR = 13"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer", "minimum": 0, "maximum": 65535 }
          ],
          "binaryFormat": "H",
          "description": "uint16; length of the PDR payload (calculated)"
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },

    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Handle identifying all PDRs belonging to a specific PLDM terminus"
    },

    "effecterID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Effecter ID (matches the effecterID in the corresponding Numeric/State Effecter PDR)"
    },

    "auxNames": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "description": "One entry per composite effecter (1 for simple effecters, up to 8 for composite effecters)",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "nameStringCount": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "binaryFormat": "B",
            "description": "uint8; Number of language-tag + name pairs for this effecter offset"
          },
          "names": {
            "type": "array",
            "minItems": 0,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "binaryOrder": ["languageTag", "effecterName"],
              "properties": {
                "languageTag": {
                  "type": "string",
                  "binaryFormat": "variable",
                  "description": "strASCII; null-terminated language tag per RFC 4646 (e.g. 'en'). Empty string = unspecified"
                },
                "effecterName": {
                  "type": "string",
                  "binaryFormat": "variable",
                  "description": "strUTF-16BE; null-terminated effecter name in the language given by languageTag. Empty string = not provided"
                }
              },
              "required": ["languageTag", "effecterName"]
            }
          }
        },
        "required": ["nameStringCount", "names"]
      }
    }
  },

  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "effecterID",
    "auxNames"
  ]
}
