{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM Unit PDR (DSP0248 Type 7)",
  "description": "Per DSP0248 v1.3.0 Clause 28.9 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "containerID",
    "baseUnit",
    "unitModifier",
    "nameStringCount",
    "unitNames"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 7,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 7 = OEM Unit"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "containerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The container ID for the entity with which the OEM unit is associated. 0 = no container."
    },
    "baseUnit": {
      "type": "integer",
      "const": 255,
      "binaryFormat": "B",
      "description": "uint8; Base unit code, set to 255 for OEM units."
    },
    "unitModifier": {
      "type": "integer",
      "minimum": -128,
      "maximum": 127,
      "binaryFormat": "b",
      "description": "sint8; Unit modifier (power of 10)."
    },
    "nameStringCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 16,
      "binaryFormat": "B",
      "description": "uint8; Number of unit name pairs. If 0, 'unitNames' array must be empty."
    },
    "unitNames": {
      "type": "array",
      "description": "Array of unit name pairs. Length must match 'nameStringCount'.",
      "minItems": 0,
      "maxItems": 16,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "nameLanguageTag",
          "oemUnitString"
        ],
        "properties": {
          "nameLanguageTag": {
            "type": "string",
            "description": "strASCII per DSP0240. RFC 5646 tag (e.g., 'en'). Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
            "binaryFormat": "variable",
            "x-binary-encoding": "us-ascii",
            "x-binary-terminator": "0x00",
            "maxLength": 32
          },
          "oemUnitString": {
            "type": "string",
            "description": "strUTF-16BE per DSP0240. Null-terminated (0x0000). No BOM required; empty string is just the terminator. Includes terminator in binary length.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-16be",
            "x-binary-terminator": "0x0000",
            "maxLength": 128
          }
        },
        "required": ["nameLanguageTag", "oemUnitString"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "containerID",
    "baseUnit",
    "unitModifier",
    "nameStringCount",
    "unitNames"
  ]
}
