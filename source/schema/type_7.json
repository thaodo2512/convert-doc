{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM Unit PDR (DSP0248 Type 7)",
  "description": "Per DSP0248 v1.3.0 Clause 28.9, Table 85",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "OEMUnitHandle",
    "vendorIANA",
    "OEMUnitID",
    "stringCount",
    "unitNames"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 7,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 7 = OEM Unit"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The terminus that originated this PDR"
    },
    "OEMUnitHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Opaque number identifying different OEM Unit PDRs"
    },
    "vendorIANA": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; IANA Enterprise Number for the vendor defining the OEM Sensor Unit"
    },
    "OEMUnitID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Vendor-assigned numeric ID for the vendor-defined Unit. Search field for FindPDR."
    },
    "stringCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 16,
      "binaryFormat": "B",
      "description": "uint8; Number of unitLanguageTag/unitName field pairs. 0 = no name information."
    },
    "unitNames": {
      "type": "array",
      "description": "Array of unit name pairs. Length must match 'stringCount'.",
      "minItems": 0,
      "maxItems": 16,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "unitLanguageTag",
          "unitName"
        ],
        "properties": {
          "unitLanguageTag": {
            "type": "string",
            "description": "strASCII per DSP0240. RFC 5646 tag (e.g., 'en'). Null-terminated (0x00).",
            "binaryFormat": "variable",
            "x-binary-encoding": "us-ascii",
            "x-binary-terminator": "0x00",
            "maxLength": 32
          },
          "unitName": {
            "type": "string",
            "description": "strUTF-16BE per DSP0240. Null-terminated (0x0000). Name of the OEM Sensor Unit.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-16be",
            "x-binary-terminator": "0x0000",
            "maxLength": 128
          }
        },
        "required": ["unitLanguageTag", "unitName"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "OEMUnitHandle",
    "vendorIANA",
    "OEMUnitID",
    "stringCount",
    "unitNames"
  ]
}
