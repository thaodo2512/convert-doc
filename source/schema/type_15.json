{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Entity Association PDR (DSP0248 Type 15)",
  "description": "Per DSP0248 v1.3.0 Clause 28.17 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "containerID",
    "associationType",
    "containerEntityType",
    "containerEntityInstanceNumber",
    "containerEntityContainerID",
    "containedEntityCount",
    "containedEntities"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 15,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 15 = Entity Association"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "containerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Opaque number identifying this container entity. 0 = SYSTEM (top-level)."
    },
    "associationType": {
      "type": "integer",
      "enum": [0, 1],
      "binaryFormat": "B",
      "description": "uint8; Association Type: 0 = physicalToPhysicalContainment, 1 = logicalContainment."
    },
    "containerEntityType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Entity Type of the container entity."
    },
    "containerEntityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Entity Instance Number of the container entity."
    },
    "containerEntityContainerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Container ID of the container entity's parent."
    },
    "containedEntityCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 32,
      "binaryFormat": "B",
      "description": "uint8; Number of contained entities in this PDR (at least 1, practical max 32)."
    },
    "containedEntities": {
      "type": "array",
      "description": "Array of contained entities. Length must match 'containedEntityCount'.",
      "minItems": 1,
      "maxItems": 32,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "containedEntityType",
          "containedEntityInstanceNumber",
          "containedEntityContainerID"
        ],
        "properties": {
          "containedEntityType": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Entity Type of the contained entity."
          },
          "containedEntityInstanceNumber": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Entity Instance Number of the contained entity."
          },
          "containedEntityContainerID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Container ID assigned to this contained entity."
          }
        },
        "required": ["containedEntityType", "containedEntityInstanceNumber", "containedEntityContainerID"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "containerID",
    "associationType",
    "containerEntityType",
    "containerEntityInstanceNumber",
    "containerEntityContainerID",
    "containedEntityCount",
    "containedEntities"
  ]
}
