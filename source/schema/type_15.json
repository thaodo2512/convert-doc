{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Entity Association PDR Schema (DSP0248 1.3.0, Clause 28.17)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "containerID",
    "associationType",
    "containerEntityType",
    "containerEntityInstanceNumber",
    "containerEntityContainerID",
    "containedEntityCount"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 15,
          "binaryFormat": "B",
          "description": "uint8; Entity Association PDR = 15"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "containerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; opaque number identifying a container entity. Special: 0x0000 = 'SYSTEM' (topmost container)"
    },
    "associationType": {
      "type": "integer",
      "enum": [
        0,
        1
      ],
      "binaryFormat": "B",
      "description": "enum8: 0=physicalToPhysicalContainment, 1=logicalContainment"
    },
    "containerEntityType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Container entity type"
    },
    "containerEntityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Container entity instance number (top-level PDRs use 1)"
    },
    "containerEntityContainerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Container entity's container ID"
    },
    "containedEntityCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Number of contained entities (1 to N) in this PDR"
    },
    "containedEntities": {
      "type": "array",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "containedEntityType",
          "containedEntityInstanceNumber",
          "containedEntityContainerID"
        ],
        "properties": {
          "containedEntityType": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Contained entity type"
          },
          "containedEntityInstanceNumber": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Contained entity instance number"
          },
          "containedEntityContainerID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Contained entity's container ID"
          }
        },
        "required": [
          "containedEntityType",
          "containedEntityInstanceNumber",
          "containedEntityContainerID"
        ]
      },
      "description": "Array of contained entities, length = containedEntityCount"
    }
  },
  "required": [
    "pdrHeader",
    "containerID",
    "associationType",
    "containerEntityType",
    "containerEntityInstanceNumber",
    "containerEntityContainerID",
    "containedEntityCount",
    "containedEntities"
  ]
}
