{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Interrupt Association PDR (DSP0248 Type 18)",
  "description": "Per DSP0248 v1.3.0 Clause 28.20 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "sourceOrTargetSensor",
    "interruptTargetEntityType",
    "interruptTargetEntityInstanceNumber",
    "interruptTargetEntityContainerID",
    "interruptSourceEntityCount",
    "interruptSources"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 18,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 18 = Interrupt Association"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; This value is used to identify the terminus that provides access to the sensor that is monitoring the interrupt that is related to this association."
    },
    "sensorID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The ID of the sensor that monitors this interrupt at a source or target"
    },
    "sourceOrTargetSensor": {
      "type": "integer",
      "enum": [0, 1],
      "binaryFormat": "B",
      "description": "enum8; Identifies whether the sensor is monitoring the interrupt at the source or the target. 0 = targetSensor, 1 = sourceSensor"
    },
    "interruptTargetEntityType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; interruptTargetEntityType"
    },
    "interruptTargetEntityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; interruptTargetEntityInstanceNumber"
    },
    "interruptTargetEntityContainerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; interruptTargetEntityContainerID"
    },
    "interruptSourceEntityCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8,
      "binaryFormat": "B",
      "description": "uint8; The number of interruptSource entities (1 to N) listed in this particular PDR."
    },
    "interruptSources": {
      "type": "array",
      "description": "Array of interrupt source entities. Length must match 'interruptSourceEntityCount'.",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "interruptSourcePLDMTerminusHandle",
          "interruptSourceEntityType",
          "interruptSourceEntityInstanceNumber",
          "interruptSourceEntityContainerID",
          "interruptSourceSensorID"
        ],
        "properties": {
          "interruptSourcePLDMTerminusHandle": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295,
            "binaryFormat": "I",
            "description": "uint32; interruptSourcePLDMTerminusHandle"
          },
          "interruptSourceEntityType": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; interruptSourceEntityType"
          },
          "interruptSourceEntityInstanceNumber": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; interruptSourceEntityInstanceNumber"
          },
          "interruptSourceEntityContainerID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; interruptSourceEntityContainerID"
          },
          "interruptSourceSensorID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; interruptSourceSensorID"
          }
        },
        "required": ["interruptSourcePLDMTerminusHandle", "interruptSourceEntityType", "interruptSourceEntityInstanceNumber", "interruptSourceEntityContainerID", "interruptSourceSensorID"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "sourceOrTargetSensor",
    "interruptTargetEntityType",
    "interruptTargetEntityInstanceNumber",
    "interruptTargetEntityContainerID",
    "interruptSourceEntityCount",
    "interruptSources"
  ]
}
