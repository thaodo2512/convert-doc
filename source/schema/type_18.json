{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Interrupt Association PDR Schema (DSP0248 1.3.0, Clause 28.20)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "PLDMTerminusHandle",
    "sensorID",
    "sourceOrTargetSensor",
    "interruptTargetEntityType",
    "interruptTargetEntityInstanceNumber",
    "interruptTargetEntityContainerID",
    "interruptSourceEntityCount"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 18,
          "binaryFormat": "B",
          "description": "uint8; Interrupt Association PDR = 18"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; This value is used to identify the terminus that provides access to the sensor that is monitoring the interrupt that is related to this association."
    },
    "sensorID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The ID of the sensor that monitors this interrupt at a source or target"
    },
    "sourceOrTargetSensor": {
      "type": "integer",
      "enum": [
        0,
        1
      ],
      "binaryFormat": "B",
      "description": "enum8: 0=targetSensor, 1=sourceSensor; Identifies whether the sensor is monitoring the interrupt at the source or the target."
    },
    "interruptTargetEntityType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Target entity type"
    },
    "interruptTargetEntityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Target entity instance number"
    },
    "interruptTargetEntityContainerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Target entity container ID"
    },
    "interruptSourceEntityCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; The number of interruptSource entities (1 to N) listed in this particular PDR."
    },
    "interruptSources": {
      "type": "array",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "interruptSourcePLDMTerminusHandle",
          "interruptSourceEntityType",
          "interruptSourceEntityInstanceNumber",
          "interruptSourceEntityContainerID",
          "interruptSourceSensorID"
        ],
        "properties": {
          "interruptSourcePLDMTerminusHandle": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295,
            "binaryFormat": "I",
            "description": "uint32; PLDM Terminus Handle for the source"
          },
          "interruptSourceEntityType": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Source entity type"
          },
          "interruptSourceEntityInstanceNumber": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Source entity instance number"
          },
          "interruptSourceEntityContainerID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Source entity container ID"
          },
          "interruptSourceSensorID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Source sensor ID"
          }
        },
        "required": [
          "interruptSourcePLDMTerminusHandle",
          "interruptSourceEntityType",
          "interruptSourceEntityInstanceNumber",
          "interruptSourceEntityContainerID",
          "interruptSourceSensorID"
        ]
      },
      "description": "Array of interrupt sources, length = interruptSourceEntityCount"
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "sourceOrTargetSensor",
    "interruptTargetEntityType",
    "interruptTargetEntityInstanceNumber",
    "interruptTargetEntityContainerID",
    "interruptSourceEntityCount",
    "interruptSources"
  ]
}
