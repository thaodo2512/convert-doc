{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM Entity ID PDR (DSP0248 Type 17)",
  "description": "Per DSP0248 v1.3.0 Clause 28.19 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "entityType",
    "entityInstanceNumber",
    "containerID",
    "oemEntityIDLength",
    "oemEntityID"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 17,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 17 = OEM Entity ID"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "entityType": {
      "type": "integer",
      "minimum": 32768,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The OEM entity type number (8000h-FFFFh)"
    },
    "entityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The instance number for the contained entity"
    },
    "containerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The container ID for the contained entity"
    },
    "oemEntityIDLength": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Length of the OEM Entity ID data in bytes"
    },
    "oemEntityID": {
      "type": "array",
      "description": "OEM-specific entity ID data. Length must match 'oemEntityIDLength'.",
      "minItems": 0,
      "maxItems": 255,
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255,
        "binaryFormat": "B",
        "description": "uint8"
      }
    }
  },
  "required": [
    "pdrHeader",
    "entityType",
    "entityInstanceNumber",
    "containerID",
    "oemEntityIDLength",
    "oemEntityID"
  ]
}
