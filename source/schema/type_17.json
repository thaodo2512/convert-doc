{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM EntityID PDR Schema (DSP0248 1.3.0, Clause 28.19)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "vendorIANA",
    "OEMEntityID",
    "stringCount"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 17,
          "binaryFormat": "B",
          "description": "uint8; OEM EntityID PDR = 17"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "vendorIANA": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; IANA Enterprise Number for the vendor defining the OEM EntityID"
    },
    "OEMEntityID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Vendor-assigned numeric ID for the OEM entity type"
    },
    "stringCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Number of following pairs [0..N] of entityLanguageTag + entityName fields"
    },
    "entityNames": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "entityLanguageTag",
          "entityName"
        ],
        "properties": {
          "entityLanguageTag": {
            "type": "string",
            "binaryFormat": "variable",
            "description": "strASCII; Null-terminated language tag per RFC4646 (e.g., 'en'). Special: empty = unspecified"
          },
          "entityName": {
            "type": "string",
            "binaryFormat": "variable",
            "description": "strUTF-16BE; Null-terminated unicode string for the OEM entity name. Special: empty = not provided"
          }
        },
        "required": [
          "entityLanguageTag",
          "entityName"
        ]
      },
      "description": "Array of entity name pairs, length = stringCount"
    }
  },
  "required": [
    "pdrHeader",
    "vendorIANA",
    "OEMEntityID",
    "stringCount",
    "entityNames"
  ]
}
