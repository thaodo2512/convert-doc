{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM Device PDR Schema (DSP0248 1.3.0, Clause 28.23)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "vendorIANA",
    "OEMDeviceID",
    "OEMDeviceData"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 126,
          "binaryFormat": "B",
          "description": "uint8; OEM Device PDR = 126"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "vendorIANA": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; IANA Enterprise Number for the vendor defining the OEM Device PDR"
    },
    "OEMDeviceID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Vendor-assigned numeric ID for the OEM device type"
    },
    "OEMDeviceData": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "binaryFormat": "variable",
      "description": "Variable bytes; OEM-specific device data"
    }
  },
  "required": [
    "pdrHeader",
    "vendorIANA",
    "OEMDeviceID",
    "OEMDeviceData"
  ]
}
