{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Redfish Entity Association PDR Schema (DSP0248 1.3.0, Clause 28.27)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "ResourceID",
    "AssociationType",
    "ContainedEntityCount"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 23,
          "binaryFormat": "B",
          "description": "uint8; Redfish Entity Association PDR = 23"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "ResourceID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; ResourceID of the containing (parent) entity (references a Redfish Resource PDR)"
    },
    "AssociationType": {
      "type": "integer",
      "enum": [
        0,
        1,
        2
      ],
      "binaryFormat": "B",
      "description": "enum8: 0=physicalContainment, 1=logicalContainment, 2=mergedEntity"
    },
    "ContainedEntityCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Number of contained entities (1 to N; for mergedEntity, 2 to N)"
    },
    "ContainedResourceIDs": {
      "type": "array",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 4294967295,
        "binaryFormat": "I",
        "description": "uint32; ResourceID of a contained (child) entity (references a Redfish Resource PDR)"
      },
      "binaryFormat": "variable",
      "description": "Array of ContainedResourceID, length = ContainedEntityCount"
    }
  },
  "required": [
    "pdrHeader",
    "ResourceID",
    "AssociationType",
    "ContainedEntityCount",
    "ContainedResourceIDs"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "AssociationType": {
            "const": 2
          }
        },
        "required": [
          "AssociationType"
        ]
      },
      "then": {
        "properties": {
          "ContainedEntityCount": {
            "minimum": 2
          }
        }
      }
    }
  ]
}
