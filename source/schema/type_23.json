{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Redfish Entity Association PDR (DSP0248 Type 23)",
  "description": "Per DSP0248 v1.3.0 Clause 28.27 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "ContainingResourceID",
    "ProposedContainingResourceLengthBytes",
    "ProposedContainingResourceName",
    "ContainedEntityCount",
    "ContainedEntityResourceID"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "auto"
              ]
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 23,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 23 = Redfish Entity Association"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "auto"
              ]
            },
            {
              "type": "integer",
              "minimum": 0
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "ContainingResourceID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; Opaque number referencing a Redfish Resource PDR. Special: 0x00000000 = EXTERNAL, 0xFFFFFFFF reserved."
    },
    "ProposedContainingResourceLengthBytes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length in bytes of ProposedContainingResourceName including null terminator. Shall be 1 if ContainingResourceID is not EXTERNAL."
    },
    "ProposedContainingResourceName": {
      "type": "string",
      "description": "utf8string per DSP0240. Null-terminated (0x00). Includes terminator in binary length. Shall be null ('\\0') if ContainingResourceID is not EXTERNAL. Length (including null) must match 'ProposedContainingResourceLengthBytes'.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 128
    },
    "ContainedEntityCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 32,
      "binaryFormat": "B",
      "description": "uint8; Number of contained entities (tightened to practical max 32)."
    },
    "ContainedEntityResourceID": {
      "type": "array",
      "description": "Array of contained resource IDs. Length must match 'ContainedEntityCount'.",
      "minItems": 0,
      "maxItems": 32,
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 4294967295,
        "binaryFormat": "I",
        "description": "uint32; Opaque number referencing a contained Redfish Resource PDR."
      }
    }
  },
  "required": [
    "pdrHeader",
    "ContainingResourceID",
    "ProposedContainingResourceLengthBytes",
    "ProposedContainingResourceName",
    "ContainedEntityCount",
    "ContainedEntityResourceID"
  ]
}
