{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEM Effecter Semantic PDR Schema (DSP0248 1.3.0, Clause 28.16)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "PLDMTerminusHandle",
    "OEMEffecterSemanticHandle",
    "vendorIANA",
    "OEMEffecterSemanticID",
    "stringCount"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 14,
          "binaryFormat": "B",
          "description": "uint8; OEM Effecter Semantic PDR = 14"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; The terminus that originated this PDR"
    },
    "OEMEffecterSemanticHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; An opaque number that is used to identify different OEM effecter semantics that are defined by the given vendor on the given terminus"
    },
    "vendorIANA": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; The IANA Enterprise Number for the vendor that is defining the OEM Effecter Semantic"
    },
    "OEMEffecterSemanticID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; A value that can be used as a search field for the FindPDR command. This number is assigned by the vendor and provides a numeric ID for the vendor-defined effecter semantic"
    },
    "stringCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; The number 1..N of languageTag and name field pairs that follow this field. { 0 = no name information provided }"
    },
    "names": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "languageTag",
          "name"
        ],
        "properties": {
          "languageTag": {
            "type": "string",
            "binaryFormat": "variable",
            "description": "strASCII; A null-terminated ISO646 ASCII string that holds a language tag, per RFC4646. Special value: null string = unspecified"
          },
          "name": {
            "type": "string",
            "binaryFormat": "variable",
            "description": "strUTF-16BE; A null-terminated unicode string that contains the name of the OEM Effecter Semantic"
          }
        },
        "required": [
          "languageTag",
          "name"
        ]
      },
      "description": "Array of name pairs, length = stringCount"
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "OEMEffecterSemanticHandle",
    "vendorIANA",
    "OEMEffecterSemanticID",
    "stringCount",
    "names"
  ]
}
