{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Redfish Action PDR (DSP0248 Type 24)",
  "description": "Per DSP0248 v1.3.0 Clause 28.28 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "actionPDRIndex",
    "relatedResourceCount",
    "relatedResourceIDs",
    "actionCount",
    "actions"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 24,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 24 = Redfish Action"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "actionPDRIndex": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Zero-based index for Action PDRs linked to a single Redfish Resource PDR; establishes ordering when split across multiple PDRs."
    },
    "relatedResourceCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 32,
      "binaryFormat": "H",
      "description": "uint16; Number NR of Resources the Actions in this PDR are linked to."
    },
    "relatedResourceIDs": {
      "type": "array",
      "description": "Array of RelatedResourceID. Length must match 'relatedResourceCount'.",
      "minItems": 0,
      "maxItems": 32,
      "items": {
        "type": "integer",
        "minimum": 1,
        "maximum": 4294967294,
        "binaryFormat": "I",
        "description": "uint32; Opaque number identifying the Redfish Resource PDR (1 to 0xFFFFFFFE)."
      }
    },
    "actionCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 32,
      "binaryFormat": "B",
      "description": "uint8; Number NA of Redfish Actions in this PDR."
    },
    "actions": {
      "type": "array",
      "description": "Array of action definitions. Length must match 'actionCount'.",
      "minItems": 0,
      "maxItems": 32,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "actionNameLengthBytes",
          "actionName",
          "actionPathLengthBytes",
          "actionPath"
        ],
        "properties": {
          "actionNameLengthBytes": {
            "type": "integer",
            "minimum": 1,
            "maximum": 129,
            "binaryFormat": "B",
            "description": "uint8; Length in bytes of actionName, including null terminator."
          },
          "actionName": {
            "type": "string",
            "description": "utf8string per DSP0240. Null-terminated (0x00). Includes terminator in binary length. e.g., 'Reset'.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-8",
            "x-binary-terminator": "0x00",
            "maxLength": 128
          },
          "actionPathLengthBytes": {
            "type": "integer",
            "minimum": 1,
            "maximum": 129,
            "binaryFormat": "B",
            "description": "uint8; Length in bytes of actionPath, including null terminator."
          },
          "actionPath": {
            "type": "string",
            "description": "utf8string per DSP0240. Null-terminated (0x00). Includes terminator in binary length. e.g., 'Actions/ComputerSystem.Reset'.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-8",
            "x-binary-terminator": "0x00",
            "maxLength": 128
          }
        },
        "required": ["actionNameLengthBytes", "actionName", "actionPathLengthBytes", "actionPath"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "actionPDRIndex",
    "relatedResourceCount",
    "relatedResourceIDs",
    "actionCount",
    "actions"
  ]
}
