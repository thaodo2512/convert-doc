{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Redfish Resource PDR (DSP0248 Type 22)",
  "description": "Per DSP0248 v1.3.0 Clause 28.26 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "ResourceID",
    "ResourceFlags",
    "ContainingResourceID",
    "ProposedContainingResourceLengthBytes",
    "ProposedContainingResourceName",
    "SubURILengthBytes",
    "SubURI",
    "AdditionalResourceIDCount",
    "additionalResources",
    "MajorSchemaVersion",
    "MajorSchemaDictionaryLengthBytes",
    "MajorSchemaDictionarySignature",
    "MajorSchemaNameLength",
    "MajorSchemaName",
    "OEMCount",
    "oems"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 22,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 22 = Redfish Resource"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "ResourceID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; The primary ResourceID among the resources described by this PDR."
    },
    "ResourceFlags": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "bitfield8; Flags: [7:3] reserved, [2] is_collection, [1] is_contained_in_collection, [0] is_device_root"
    },
    "ContainingResourceID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; Containing ResourceID. 0 = EXTERNAL, 0xFFFFFFFF reserved."
    },
    "ProposedContainingResourceLengthBytes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length in bytes of ProposedContainingResourceName (incl. null)."
    },
    "ProposedContainingResourceName": {
      "type": "string",
      "description": "strUTF-8; Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 256
    },
    "SubURILengthBytes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length in bytes of SubURI (incl. null)."
    },
    "SubURI": {
      "type": "string",
      "description": "strUTF-8; Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 256
    },
    "AdditionalResourceIDCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 8,
      "binaryFormat": "H",
      "description": "uint16; Number of additional resources (NA)."
    },
    "additionalResources": {
      "type": "array",
      "description": "Array of additional resources. Length must match 'AdditionalResourceIDCount'.",
      "minItems": 0,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "AdditionalResourceID",
          "AdditionalResourceSubURILengthBytes",
          "AdditionalResourceSubURI"
        ],
        "properties": {
          "AdditionalResourceID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295,
            "binaryFormat": "I",
            "description": "uint32; Additional ResourceID."
          },
          "AdditionalResourceSubURILengthBytes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Length in bytes of AdditionalResourceSubURI (incl. null)."
          },
          "AdditionalResourceSubURI": {
            "type": "string",
            "description": "strUTF-8; Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-8",
            "x-binary-terminator": "0x00",
            "maxLength": 256
          }
        },
        "required": ["AdditionalResourceID", "AdditionalResourceSubURILengthBytes", "AdditionalResourceSubURI"]
      }
    },
    "MajorSchemaVersion": {
      "type": "object",
      "additionalProperties": false,
      "binaryOrder": [
        "major",
        "minor",
        "update",
        "alpha"
      ],
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Major version"
        },
        "minor": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Minor version"
        },
        "update": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Update/Patch/Errata version"
        },
        "alpha": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Alpha (0=no alpha, 1=alpha1, etc.)"
        }
      },
      "required": ["major", "minor", "update", "alpha"],
      "description": "ver32; MajorSchemaVersion. 0xFFFFFFFF for unversioned."
    },
    "MajorSchemaDictionaryLengthBytes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length of dictionary data for the major schema."
    },
    "MajorSchemaDictionarySignature": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; 32-bit CRC for the major schema dictionary."
    },
    "MajorSchemaNameLength": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Length of MajorSchemaName (incl. null)."
    },
    "MajorSchemaName": {
      "type": "string",
      "description": "strUTF-8; Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 256
    },
    "OEMCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 8,
      "binaryFormat": "H",
      "description": "uint16; Number of OEMs (NO)."
    },
    "oems": {
      "type": "array",
      "description": "Array of OEMs. Length must match 'OEMCount'.",
      "minItems": 0,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "OEMNameLengthBytes",
          "OEMName"
        ],
        "properties": {
          "OEMNameLengthBytes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Length in bytes of OEMName (incl. null)."
          },
          "OEMName": {
            "type": "string",
            "description": "strUTF-8; Null-terminated (0x00). Includes terminator in binary length. Empty: just terminator.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-8",
            "x-binary-terminator": "0x00",
            "maxLength": 256
          }
        },
        "required": ["OEMNameLengthBytes", "OEMName"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "ResourceID",
    "ResourceFlags",
    "ContainingResourceID",
    "ProposedContainingResourceLengthBytes",
    "ProposedContainingResourceName",
    "SubURILengthBytes",
    "SubURI",
    "AdditionalResourceIDCount",
    "additionalResources",
    "MajorSchemaVersion",
    "MajorSchemaDictionaryLengthBytes",
    "MajorSchemaDictionarySignature",
    "MajorSchemaNameLength",
    "MajorSchemaName",
    "OEMCount",
    "oems"
  ]
}
