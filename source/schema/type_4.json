{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "State Sensor PDR (DSP0248 Type 4)",
  "description": "Per DSP0248 v1.3.0 Clause 28.6 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "entityType",
    "entityInstanceNumber",
    "containerID",
    "sensorInit",
    "sensorAuxiliaryNamesPDR",
    "compositeSensorCount",
    "stateSensors"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 4,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 4 = State Sensor"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Terminus Handle"
    },
    "sensorID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Sensor ID"
    },
    "entityType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Entity Type"
    },
    "entityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Entity Instance Number"
    },
    "containerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Container ID"
    },
    "sensorInit": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "binaryFormat": "B",
      "description": "uint8; Sensor Initialization: 0=noInit, 1=useInitPDR, 2=enable, 3=disable"
    },
    "sensorAuxiliaryNamesPDR": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "binaryFormat": "B",
      "description": "uint8; 1 if auxiliary names PDR exists, 0 otherwise"
    },
    "compositeSensorCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8,
      "binaryFormat": "B",
      "description": "uint8; Number of state sensor operational sets (1 for simple, up to 8 for composite)"
    },
    "stateSensors": {
      "type": "array",
      "description": "Array of state sensor operational sets. Length must match 'compositeSensorCount'.",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "stateSetID",
          "possibleStatesSize",
          "possibleStates"
        ],
        "properties": {
          "stateSetID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; State Set ID"
          },
          "possibleStatesSize": {
            "type": "integer",
            "minimum": 1,
            "maximum": 32,
            "binaryFormat": "B",
            "description": "uint8; Number of bytes in possibleStates bitfield"
          },
          "possibleStates": {
            "type": "array",
            "description": "bitfield8[possibleStatesSize]; Each byte represents 8 possible states (bit 0 = state 1, etc.). Length must match 'possibleStatesSize'.",
            "minItems": 1,
            "maxItems": 32,
            "items": {
              "type": "integer",
              "minimum": 0,
              "maximum": 255,
              "binaryFormat": "B",
              "description": "uint8; Byte in the possible states bitfield"
            }
          }
        },
        "required": ["stateSetID", "possibleStatesSize", "possibleStates"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "entityType",
    "entityInstanceNumber",
    "containerID",
    "sensorInit",
    "sensorAuxiliaryNamesPDR",
    "compositeSensorCount",
    "stateSensors"
  ]
}
