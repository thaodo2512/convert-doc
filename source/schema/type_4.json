{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "State Sensor PDR Schema (DSP0248 1.3.0, Clause 28.6)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "PLDMTerminusHandle",
    "sensorID",
    "entityType",
    "entityInstanceNumber",
    "containerID",
    "sensorInit",
    "sensorAuxiliaryNamesPDR",
    "compositeSensorCount"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordHandle": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 4294967295
            }
          ],
          "binaryFormat": "I",
          "description": "uint32; opaque handle (TBD or auto-generated)"
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; must be 1"
        },
        "PDRType": {
          "type": "integer",
          "const": 4,
          "binaryFormat": "B",
          "description": "uint8; State Sensor PDR = 4"
        },
        "recordChangeNumber": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; incremented on changes (default 0)"
        },
        "dataLength": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 65535
            }
          ],
          "binaryFormat": "H",
          "description": "uint16; calculated data length (TBD)"
        }
      },
      "required": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; terminus handle"
    },
    "sensorID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; unique sensor ID"
    },
    "entityType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; entity type (see 9.1)"
    },
    "entityInstanceNumber": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; entity instance"
    },
    "containerID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; container ID"
    },
    "sensorInit": {
      "type": "integer",
      "enum": [
        0,
        1,
        2,
        3
      ],
      "binaryFormat": "B",
      "description": "enum8: 0=noInit, 1=useInitPDR, 2=enableSensor, 3=disableSensor"
    },
    "sensorAuxiliaryNamesPDR": {
      "type": "boolean",
      "binaryFormat": "B",
      "description": "bool8; true if auxiliary names PDR exists"
    },
    "compositeSensorCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8,
      "binaryFormat": "B",
      "description": "uint8; number of composite sensors (1-8)"
    },
    "compositeSensorStates": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "stateSetID",
          "possibleStatesSize",
          "possibleStates"
        ],
        "properties": {
          "stateSetID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; state set ID"
          },
          "possibleStatesSize": {
            "type": "integer",
            "minimum": 0,
            "maximum": 32,
            "binaryFormat": "B",
            "description": "uint8; size in bytes of possibleStates, 0=unavailable"
          },
          "possibleStates": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0,
              "maximum": 255,
              "binaryFormat": "B"
            },
            "binaryFormat": "variable",
            "description": "bitfield8[possibleStatesSize]; bits indicate supported states"
          }
        },
        "required": [
          "stateSetID",
          "possibleStatesSize",
          "possibleStates"
        ]
      },
      "description": "Array of composite sensor states, length equals compositeSensorCount"
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "entityType",
    "entityInstanceNumber",
    "containerID",
    "sensorInit",
    "sensorAuxiliaryNamesPDR",
    "compositeSensorCount",
    "compositeSensorStates"
  ]
}
