{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Redfish Parallel Resource PDR (DSP0248 Type 25)",
  "description": "Per DSP0248 v1.3.0 Clause 28.29 and DSP0240 v1.2.0 Section 2.5",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "ResourceID",
    "ResourceFlags",
    "ContainingResourceID",
    "AdditionalResourceIDCount",
    "AdditionalResources",
    "ProposedContainingResourceLengthBytes",
    "ProposedContainingResourceName",
    "SubURILengthBytes",
    "SubURI",
    "MajorSchemaVersion",
    "MajorSchemaDictionaryLengthBytes",
    "MajorSchemaDictionarySignature",
    "MajorSchemaNameLength",
    "MajorSchemaName",
    "OEMCount",
    "OEMNames"
  ],
  "x-c-struct-packing": 1,
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 25,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 25 = Redfish Parallel Resource"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "ResourceID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; The primary ResourceID among the resources described by this PDR."
    },
    "ResourceFlags": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255,
      "default": 0,
      "binaryFormat": "B",
      "description": "bitfield8; Flags associated with this Resource: [7:0] - reserved for future use."
    },
    "ContainingResourceID": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4294967294,
      "binaryFormat": "I",
      "description": "uint32; ContainingResourceID. Value: 0x00000001 to 0xFFFFFFFE. Special value 0x00000000 = EXTERNAL shall not be used. 0xFFFFFFFF reserved."
    },
    "AdditionalResourceIDCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 8,
      "binaryFormat": "H",
      "description": "uint16; Number NA of additional resourceIDs (tightened to practical max 8)."
    },
    "AdditionalResources": {
      "type": "array",
      "description": "Array of additional resources. Length must match 'AdditionalResourceIDCount'.",
      "minItems": 0,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "AdditionalResourceID",
          "AdditionalContainingResourceID"
        ],
        "properties": {
          "AdditionalResourceID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295,
            "binaryFormat": "I",
            "description": "uint32; AdditionalResourceID."
          },
          "AdditionalContainingResourceID": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4294967294,
            "binaryFormat": "I",
            "description": "uint32; AdditionalContainingResourceID. Value: 0x00000001 to 0xFFFFFFFE. Special value 0x00000000 = EXTERNAL shall not be used. 0xFFFFFFFF reserved."
          }
        },
        "required": ["AdditionalResourceID", "AdditionalContainingResourceID"]
      }
    },
    "ProposedContainingResourceLengthBytes": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length in bytes of ProposedContainingResourceName (including null terminator). Shall be 1 if ContainingResourceID is not EXTERNAL."
    },
    "ProposedContainingResourceName": {
      "type": "string",
      "description": "strUTF-8; Null-terminated UTF-8 string. Binary length (including terminator) must equal 'ProposedContainingResourceLengthBytes'. Shall be a null byte if ContainingResourceID is not EXTERNAL.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 64
    },
    "SubURILengthBytes": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length in bytes of SubURI (including null terminator)."
    },
    "SubURI": {
      "type": "string",
      "description": "strUTF-8; Null-terminated UTF-8 string. Binary length (including terminator) must equal 'SubURILengthBytes'. Shall be a null byte if ContainingResourceID is EXTERNAL, except for settings resources.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 128
    },
    "MajorSchemaVersion": {
      "type": "object",
      "additionalProperties": false,
      "binaryOrder": [
        "major",
        "minor",
        "update",
        "alpha"
      ],
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Major version."
        },
        "minor": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Minor version."
        },
        "update": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Update version."
        },
        "alpha": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "binaryFormat": "B",
          "description": "uint8; Alpha version."
        }
      },
      "required": ["major", "minor", "update", "alpha"],
      "description": "ver32; MajorSchemaVersion. 0xFFFFFFFF for unversioned schema."
    },
    "MajorSchemaDictionaryLengthBytes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Length of dictionary data for the major schema."
    },
    "MajorSchemaDictionarySignature": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "binaryFormat": "I",
      "description": "uint32; 32-bit CRC for the major schema dictionary, including all OEM extensions."
    },
    "MajorSchemaNameLength": {
      "type": "integer",
      "minimum": 1,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Length of MajorSchemaName (including null terminator)."
    },
    "MajorSchemaName": {
      "type": "string",
      "description": "strUTF-8; Null-terminated UTF-8 string. Binary length (including terminator) must equal 'MajorSchemaNameLength'.",
      "binaryFormat": "variable",
      "x-binary-encoding": "utf-8",
      "x-binary-terminator": "0x00",
      "maxLength": 64
    },
    "OEMCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 8,
      "binaryFormat": "H",
      "description": "uint16; Number NO of OEMs (tightened to practical max 8)."
    },
    "OEMNames": {
      "type": "array",
      "description": "Array of OEM names. Length must match 'OEMCount'.",
      "minItems": 0,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "OEMNameLengthBytes",
          "OEMName"
        ],
        "properties": {
          "OEMNameLengthBytes": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535,
            "binaryFormat": "H",
            "description": "uint16; Length in bytes of OEMName (including null terminator)."
          },
          "OEMName": {
            "type": "string",
            "description": "strUTF-8; Null-terminated UTF-8 string. Binary length (including terminator) must equal 'OEMNameLengthBytes'.",
            "binaryFormat": "variable",
            "x-binary-encoding": "utf-8",
            "x-binary-terminator": "0x00",
            "maxLength": 64
          }
        },
        "required": ["OEMNameLengthBytes", "OEMName"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "ResourceID",
    "ResourceFlags",
    "ContainingResourceID",
    "AdditionalResourceIDCount",
    "AdditionalResources",
    "ProposedContainingResourceLengthBytes",
    "ProposedContainingResourceName",
    "SubURILengthBytes",
    "SubURI",
    "MajorSchemaVersion",
    "MajorSchemaDictionaryLengthBytes",
    "MajorSchemaDictionarySignature",
    "MajorSchemaNameLength",
    "MajorSchemaName",
    "OEMCount",
    "OEMNames"
  ]
}
