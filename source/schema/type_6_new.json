{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sensor Auxiliary Names PDR (DSP0248 Type 6)",
  "type": "object",
  "additionalProperties": false,
  "binaryOrder": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "sensorCount",
    "auxNames"
  ],
  "properties": {
    "pdrHeader": {
      "type": "object",
      "description": "Common PDR Header (DSP0248)",
      "additionalProperties": false,
      "binaryOrder": [
        "recordHandle",
        "PDRHeaderVersion",
        "PDRType",
        "recordChangeNumber",
        "dataLength"
      ],
      "properties": {
        "recordHandle": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0, "maximum": 4294967295 }
          ],
          "binaryFormat": "I",
          "description": "uint32; PDR Record Handle. 0 = auto-assign."
        },
        "PDRHeaderVersion": {
          "type": "integer",
          "const": 1,
          "binaryFormat": "B",
          "description": "uint8; PDR Header Version (1)"
        },
        "PDRType": {
          "type": "integer",
          "const": 6,
          "binaryFormat": "B",
          "description": "uint8; PDR Type 6 = Sensor Auxiliary Names"
        },
        "recordChangeNumber": {
          "type": "integer",
          "default": 0,
          "binaryFormat": "H",
          "description": "uint16; recordChangeNumber"
        },
        "dataLength": {
          "oneOf": [
            { "type": "string", "enum": ["auto"] },
            { "type": "integer", "minimum": 0 }
          ],
          "binaryFormat": "H",
          "description": "uint16; Length of data following this header (calculated automatically)."
        }
      },
      "required": ["recordHandle", "PDRHeaderVersion", "PDRType", "recordChangeNumber", "dataLength"]
    },
    "PLDMTerminusHandle": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Terminus Handle"
    },
    "sensorID": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "binaryFormat": "H",
      "description": "uint16; Sensor ID of the sensor these names belong to."
    },
    "sensorCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 255,
      "binaryFormat": "B",
      "description": "uint8; Number of sensors described in this PDR (usually 1 for numeric sensors)."
    },
    "auxNames": {
      "type": "array",
      "description": "Array of name sets. Length must match 'sensorCount'.",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "binaryOrder": [
          "nameStringCount",
          "names"
        ],
        "properties": {
          "nameStringCount": {
            "type": "integer",
            "minimum": 1,
            "maximum": 255,
            "binaryFormat": "B",
            "description": "uint8; Number of name pairs (Language Tag + Sensor Name) for this sensor."
          },
          "names": {
            "type": "array",
            "description": "List of string pairs.",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "binaryOrder": [
                "nameLanguageTag",
                "sensorName"
              ],
              "properties": {
                "nameLanguageTag": {
                  "type": "string",
                  "description": "strASCII per DSP0240. RFC 5646 tag (e.g., 'en'). Null-terminated.",
                  "binaryFormat": "variable",
                  "x-binary-encoding": "us-ascii",
                  "x-binary-terminator": "0x00"
                },
                "sensorName": {
                  "type": "string",
                  "description": "strUTF-16 per DSP0240. Must contain BOM (0xFEFF). Null-terminated (2 bytes).",
                  "binaryFormat": "variable",
                  "x-binary-encoding": "utf-16be",
                  "x-binary-terminator": "0x0000"
                }
              },
              "required": ["nameLanguageTag", "sensorName"]
            }
          }
        },
        "required": ["nameStringCount", "names"]
      }
    }
  },
  "required": [
    "pdrHeader",
    "PLDMTerminusHandle",
    "sensorID",
    "sensorCount",
    "auxNames"
  ]
}
